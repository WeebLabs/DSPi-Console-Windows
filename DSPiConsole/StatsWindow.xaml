<Window
    x:Class="DSPiConsole.StatsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Stats for nerbs">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <TextBlock Text="Stats for nerbs" FontSize="20" FontWeight="SemiBold"/>

                <!-- System Info -->
                <StackPanel Spacing="4">
                    <TextBlock Text="SYSTEM INFO" FontSize="11" FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,0,4"/>
                    <Grid ColumnSpacing="12" RowSpacing="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Clock" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="ClockText" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="1" Text="Voltage" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="VoltageText" Grid.Row="1" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="2" Text="Sample Rate" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="SampleRateText" Grid.Row="2" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="3" Text="Temperature" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="TempText" Grid.Row="3" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>
                    </Grid>
                </StackPanel>

                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                <!-- PDM Stats -->
                <StackPanel Spacing="4">
                    <TextBlock Text="PDM STATS" FontSize="11" FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,0,4"/>
                    <Grid ColumnSpacing="12" RowSpacing="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Ring Overruns" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="PdmRingOverText" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="1" Text="Ring Underruns" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="PdmRingUnderText" Grid.Row="1" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="2" Text="DMA Overruns" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="PdmDmaOverText" Grid.Row="2" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="3" Text="DMA Underruns" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="PdmDmaUnderText" Grid.Row="3" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>
                    </Grid>
                </StackPanel>

                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                <!-- SPDIF Stats -->
                <StackPanel Spacing="4">
                    <TextBlock Text="SPDIF STATS" FontSize="11" FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,0,4"/>
                    <Grid ColumnSpacing="12" RowSpacing="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/><RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Overruns" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="SpdifOverText" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>

                        <TextBlock Grid.Row="1" Text="Underruns" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="SpdifUnderText" Grid.Row="1" Grid.Column="1" FontFamily="Cascadia Code, Consolas"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
