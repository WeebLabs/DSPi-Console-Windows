<Window
    x:Class="DSPiConsole.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSPiConsole"
    xmlns:controls="using:DSPiConsole.Controls"
    xmlns:converters="using:DSPiConsole.Converters"
    xmlns:models="using:DSPiConsole.Core.Models"
    Title="DSPi Console">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="32">
            <TextBlock Text="DSPi Console"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>

        <Grid x:Name="RootGrid" Grid.Row="1">
            <Grid.Resources>
                <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
                <converters:ChannelToBrushConverter x:Key="ChannelToBrush" />
                <converters:FloatFormatConverter x:Key="FloatFormat" />

                <!-- Inline value textbox style - no visual feedback -->
                <Style x:Key="InlineValueTextBoxStyle" TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <ScrollViewer x:Name="ContentElement"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Padding="{TemplateBinding Padding}"
                                              Margin="0"
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"
                                              VerticalScrollBarVisibility="Hidden"
                                              IsTabStop="False" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="2,0,2,0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Height" Value="20" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="TextAlignment" Value="Right" />
                </Style>
            </Grid.Resources>

            <!--This determines the sidebar width-->
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="280" MinWidth="200" MaxWidth="300" />
				<ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Hidden focus sink - no visual feedback -->
            <Border x:Name="FocusSink" IsTabStop="True" Background="Transparent"
                    Width="0" Height="0" Opacity="0" Grid.Column="0" Grid.ColumnSpan="2" />

            <Grid Grid.Column="0" x:Name="SidebarGrid" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- This is where we set the inpupt and output channel text padding and styles-->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Padding="12">
                        <TextBlock Text="INPUTS" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorGhostlyBrush}" Margin="0,8,0,4" />
                        <ListView x:Name="InputChannelsList" SelectionMode="Single" Margin="-12,0,-12,0" Padding="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="22,0,12,0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <TextBlock Text="OUTPUTS" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorGhostlyBrush}" Margin="0,16,0,4" />
                        <ListView x:Name="OutputChannelsList" SelectionMode="Single" Margin="-12,0,-12,0" Padding="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="22,0,12,0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="1" Padding="12" Spacing="12">
                    <TextBlock Text="GLOBAL" FontSize="12" FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorGhostlyBrush}" />

                    <StackPanel Spacing="4">
                        <Grid>
                            <TextBlock Text="Preamp" FontSize="12" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock x:Name="PreampValueText" HorizontalAlignment="Right"
                                       FontSize="12" FontFamily="Cascadia Code, Consolas"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </Grid>
                        <Slider x:Name="PreampSlider" Minimum="-60" Maximum="10" 
                                ValueChanged="OnPreampSliderChanged" />
                    </StackPanel>

                    <ToggleButton x:Name="BypassButton" HorizontalAlignment="Stretch" Click="OnBypassToggled">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE711;" FontSize="14" />
                            <TextBlock Text="Bypass Master EQ" />
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>

                <StackPanel Grid.Row="2" Padding="12" Spacing="12">
                    <TextBlock Text="SYSTEM STATUS" FontSize="10" FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <controls:CpuMeter x:Name="Cpu0Meter" Core="0" />
                        <controls:CpuMeter x:Name="Cpu1Meter" Grid.Column="1" Core="1" />
                    </Grid>

                    <StackPanel Spacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="USB IN" FontSize="9" FontWeight="SemiBold" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <Grid ColumnSpacing="4" RowSpacing="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Text="L" FontSize="9" FontFamily="Cascadia Code" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <controls:HorizontalMeterBar x:Name="MeterMasterL" Grid.Column="1" 
                                                             MeterColor="#FF4A8FE3" />
                                <TextBlock Grid.Row="1" Text="R" FontSize="9" FontFamily="Cascadia Code" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <controls:HorizontalMeterBar x:Name="MeterMasterR" Grid.Row="1" Grid.Column="1" 
                                                             MeterColor="#FFF57373" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="SPDIF OUT" FontSize="9" FontWeight="SemiBold" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <Grid ColumnSpacing="4" RowSpacing="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="MeterOutLLabel" Text="L" FontSize="9" FontFamily="Cascadia Code"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <controls:HorizontalMeterBar x:Name="MeterOutL" Grid.Column="1"
                                                             MeterColor="#FF45C2A3" />
                                <TextBlock x:Name="MeterOutRLabel" Grid.Row="1" Text="R" FontSize="9" FontFamily="Cascadia Code"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <controls:HorizontalMeterBar x:Name="MeterOutR" Grid.Row="1" Grid.Column="1"
                                                             MeterColor="#FFF0C459" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Text="PDM OUT" FontSize="9" FontWeight="SemiBold" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <Grid ColumnSpacing="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="MeterSubLabel" Text="S" FontSize="9" FontFamily="Cascadia Code"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <controls:HorizontalMeterBar x:Name="MeterSub" Grid.Column="1" 
                                                             MeterColor="#FFBA87F3" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="3" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <Ellipse x:Name="ConnectionIndicator" Width="6" Height="6" />
                            <TextBlock x:Name="ConnectionStatusText" FontSize="12" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <Button Grid.Column="1" Padding="8,4" Background="Transparent" 
                                BorderThickness="0" Click="OnReconnectClick" ToolTipService.ToolTip="Reconnect">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1" Padding="20" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="250" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Filter Response" FontSize="14" FontWeight="Medium"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" BorderThickness="0" Padding="8">
                        <FontIcon Glyph="&#xE713;" FontSize="18"/>
                        <Button.Flyout>
                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                <MenuFlyoutItem Text="Import Filters..." Click="OnImportFiltersClick">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="I"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Export Filters..." Click="OnExportFiltersClick">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="E"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutSubItem x:Name="AutoEQMenu" Text="AutoEQ">
                                    <MenuFlyoutItem Text="Browse Profiles..." Click="OnAutoEQBrowseClick">
                                        <MenuFlyoutItem.KeyboardAccelerators>
                                            <KeyboardAccelerator Modifiers="Control,Shift" Key="B"/>
                                        </MenuFlyoutItem.KeyboardAccelerators>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Update Database..." Click="OnAutoEQUpdateClick"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutSubItem x:Name="AutoEQFavoritesMenu" Text="Favorites"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="Loudness Compensation..." Click="OnLoudnessClick">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control,Shift" Key="L"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Stats for nerbs" Click="OnStatsClick">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control,Shift" Key="T"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Settings..." Click="OnSettingsClick"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="Commit Parameters..." Click="OnCommitParametersClick">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Revert to Saved..." Click="OnRevertToSavedClick"/>
                                <MenuFlyoutItem Text="Factory Reset..." Click="OnFactoryResetClick"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="Exit" Click="OnExitClick">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Modifiers="Menu" Key="F4"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>

                <Border Grid.Row="1" CornerRadius="8" 
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <controls:BodePlotControl x:Name="BodePlot" />
                </Border>

                <StackPanel x:Name="LegendPanel" Grid.Row="2" Orientation="Horizontal"
                            Spacing="8" Margin="0,12,0,16" />

                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Hidden">
                    <Grid>
                        <StackPanel x:Name="DashboardPanel" Spacing="16" />
                        <StackPanel x:Name="ChannelEditorPanel" Visibility="Collapsed" Spacing="12" />
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>